<div class="container mt-5">
  <div class="row">
    <div class="col-md-4">
      <img src="{{movie.image}}" alt="{{movie.title}}" class="img-fluid rounded shadow">
    </div>
    <div class="col-md-8">
      <h1>{{movie.title}}</h1>
      <h4 class="text-muted">Directed by {{movie.director}}</h4>
      
      <p class="mt-3">{{movie.description}}</p>
      
      <h5 class="mt-4">Stars</h5>
      <ul>
        {{#each movie.stars}}
          <li>{{this}}</li>
        {{/each}}
      </ul>

      <h5 class="mt-4">Showtimes</h5>
      <p>{{movie.showtimes}}</p>

      <a href="/movies" class="btn btn-secondary mt-4">â¬… Back to Movies</a>
    </div>
  </div>
</div>
